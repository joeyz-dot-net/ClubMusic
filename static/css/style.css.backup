html, body { 
    width:100%; 
    height:100%; 
    margin:0; 
    padding:0; 
    overflow-x:hidden; 
    touch-action:manipulation; 
}
body { 
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display", "Segoe UI", "Roboto", Arial, sans-serif; 
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    background-attachment: fixed;
    color:#ffffff; 
    -webkit-font-smoothing:antialiased;
    -webkit-text-size-adjust:100%;
    text-rendering:optimizeLegibility;
    position:relative;
    line-height:1.6;
    overflow-y: auto;
}

/* 液体玻璃背景 */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.3), transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(252, 70, 107, 0.3), transparent 50%),
        radial-gradient(circle at 40% 20%, rgba(99, 102, 241, 0.2), transparent 50%);
    pointer-events: none;
    z-index: -1;
    animation: gradient-shift 15s ease infinite;
}

@keyframes gradient-shift {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
}

/* 液体玻璃发光动画 */
@keyframes glow-pulse {
    0%, 100% {
        box-shadow: 
            0 8px 32px rgba(0, 0, 0, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
    50% {
        box-shadow: 
            0 8px 40px rgba(255, 255, 255, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.3);
    }
}

/* 卡片出现动画 */
@keyframes card-appear {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 液体玻璃滚动条 - Webkit */
::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    backdrop-filter: blur(10px);
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.15));
    border-radius: 10px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.25));
}

::-webkit-scrollbar-thumb:active {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.35));
}

/* ??????? - ???????? */
@media (max-width: 768px) {
    ::-webkit-scrollbar {
        width: 16px;
    }
    
    ::-webkit-scrollbar-thumb {
        background: #555;
        border: 3px solid #1a1a1a;
    }
    
    ::-webkit-scrollbar-thumb:active {
        background: #777;
    }
}

/* Firefox ????? */
* {
    scrollbar-width: thin;
    scrollbar-color: #4a4a4a #1a1a1a;
}

@media (max-width: 768px) {
    * {
        scrollbar-width: auto;
    }
}
h1 { 
    font-size: 22px;
    margin: 0;
    letter-spacing: 0.5px;
    color: #ffffff;
    font-weight: 700;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}
.tabs-nav { 
    background:transparent; 
    border-bottom:0; 
    display:flex; 
    gap:0;
    position:static;
    top:auto;
    z-index:9;
    -webkit-transform:translateZ(0);
    transform:translateZ(0);
    transition:all 0.3s ease;
    flex:0;
}
.tab-btn { 
    flex: 1;
    background: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    color: rgba(255, 255, 255, 0.7);
    padding: 12px 16px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    border-radius: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    min-height: 48px;
    touch-action: manipulation;
    -webkit-user-select: none;
    user-select: none;
    position: relative;
}
.tab-btn::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 3px 3px 0 0;
}
@media (max-width:768px) {
    .tab-btn { 
        font-size:14px;
        padding:10px 12px;
        min-height:44px;
    }
}
.tab-btn:hover { 
    color: #ffffff;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.12), rgba(255, 255, 255, 0.06));
}
.tab-btn.active { 
    color: #ffffff;
    background: transparent;
    font-weight: 700;
}
.tab-btn.active::before {
    width: 80%;
}

.tab-content { 
    padding: 16px 16px 100px 16px;
    line-height: 1.6;
    font-size: 16px;
    -webkit-overflow-scrolling: touch;
    word-break: break-word;
    height: 100vh;
    overflow-y: auto;
}
#tree { 
    padding: 16px 16px 160px 16px;
    line-height: 1.6;
    font-size: 16px;
    -webkit-overflow-scrolling: touch;
    word-break: break-word;
    height: 100vh;
    overflow-y: auto;
}
.local-empty { padding:20px 12px; color:#888; text-align:center; font-size:15px; }

/* 面包屑导航 */
.local-breadcrumb { 
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 14px 18px;
    margin-bottom: 16px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.12), rgba(255, 255, 255, 0.06));
    border: 1px solid rgba(255, 255, 255, 0.18);
    border-radius: 16px;
    font-size: 13px;
    overflow-x: auto;
    white-space: nowrap;
    box-shadow: 
        0 4px 16px rgba(0, 0, 0, 0.08),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(20px) saturate(160%);
    -webkit-backdrop-filter: blur(20px) saturate(160%);
}
.breadcrumb-home, .breadcrumb-item { 
    color: rgba(255, 255, 255, 0.9);
    cursor: pointer;
    padding: 6px 12px;
    border-radius: 10px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.08);
    font-weight: 500;
}
.breadcrumb-home:hover, .breadcrumb-item:hover { 
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.12));
    color: #ffffff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
}
.breadcrumb-sep { 
    color: rgba(255, 255, 255, 0.5);
    user-select: none;
    font-weight: 300;
}

.local-tree { list-style:none; margin:0; padding:0; }
.local-tree .local-dir { margin:6px 0; }
.local-dir-label { display:flex; align-items:center; gap:10px; padding:12px; border-radius:10px; background:rgba(255,255,255,0.02); cursor:pointer; user-select:none; }
.local-dir-label:hover { background:rgba(255,255,255,0.06); }
.local-toggle { width:28px; height:28px; display:flex; align-items:center; justify-content:center; border:1px solid #444; border-radius:8px; background:#1a1a1a; color:#f1f1f1; padding:0; cursor:pointer; font-size:12px; }
.local-toggle:hover { background:#262626; }
.local-toggle:active { transform:scale(0.96); }
.local-dir-name { font-weight:600; color:#ffd93d; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; }
.local-children { margin:4px 0 0 16px; padding-left:8px; border-left:1px solid rgba(255,255,255,0.05); }
.local-file-item { margin:6px 0; }
.local-file-row { display:flex; align-items:center; gap:10px; padding:12px; border-radius:10px; background:rgba(255,255,255,0.02); cursor:pointer; user-select:none; }
.local-file-item:hover .local-file-row { background:rgba(255,255,255,0.06); }
.local-file-icon { font-size:16px; }
.local-file-name { flex:1; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; }
.local-card-grid { 
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 14px;
    padding: 6px;
}
.local-card { 
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    border: 1px solid rgba(255, 255, 255, 0.18);
    border-radius: 20px;
    padding: 16px 18px;
    display: flex;
    gap: 14px;
    align-items: center;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    position: relative;
    overflow: hidden;
    animation: card-appear 0.4s ease-out backwards;
}
.local-card:nth-child(1) { animation-delay: 0.05s; }
.local-card:nth-child(2) { animation-delay: 0.1s; }
.local-card:nth-child(3) { animation-delay: 0.15s; }
.local-card:nth-child(4) { animation-delay: 0.2s; }
.local-card:nth-child(5) { animation-delay: 0.25s; }
.local-card:nth-child(6) { animation-delay: 0.3s; }
.local-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
}
.local-card:hover { 
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.08));
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 
        0 12px 40px rgba(0, 0, 0, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
}
.local-card:active { 
    transform: translateY(0) scale(0.98);
}
.local-card-icon { 
    width: 56px;
    height: 56px;
    border-radius: 16px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.1));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    color: #ffffff;
    box-shadow: 
        0 4px 16px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}
.local-card-body { display:flex; flex-direction:column; gap:4px; min-width:0; }
.local-card-title { 
    font-weight: 700;
    font-size: 15px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #ffffff;
    letter-spacing: 0.2px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}
.local-card-meta { 
    font-size: 12px;
    color: rgba(255, 255, 255, 0.8);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    opacity: 0.9;
    font-weight: 500;
}

/* 播放列表样式 */
.playlist-empty { padding:40px 20px; text-align:center; color:#888; font-size:15px; }
.playlist-current-card { 
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.15));
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 24px;
    padding: 20px;
    margin: 0 0 24px 0;
    box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.12),
        inset 0 1px 0 rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(40px) saturate(180%);
    -webkit-backdrop-filter: blur(40px) saturate(180%);
}
.current-card-header { display:flex; justify-content:space-between; align-items:center; margin-bottom:12px; }
.current-badge { display:flex; align-items:center; gap:6px; }
.badge-icon { font-size:12px; }
.badge-text { font-size:11px; font-weight:700; color:#ff3b30; letter-spacing:0.5px; }
.current-card-menu { background:none; border:none; font-size:24px; color:#666; cursor:pointer; padding:4px 8px; min-height:auto; }
.current-card-content { display:flex; gap:16px; }
.current-card-cover { 
    width: 120px;
    height: 120px;
    border-radius: 20px;
    overflow: hidden;
    flex-shrink: 0;
    position: relative;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.15));
    box-shadow: 
        0 8px 24px rgba(0, 0, 0, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.2);
}
.current-card-cover img { width:100%; height:100%; object-fit:cover; }
.current-card-cover-placeholder { position:absolute; inset:0; display:none; align-items:center; justify-content:center; font-size:40px; background:#d0d0d0; }
.current-card-info { flex:1; display:flex; flex-direction:column; justify-content:center; min-width:0; }
.current-card-title { 
    font-size: 18px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 4px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.15);
}
.current-card-subtitle { 
    font-size: 14px;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 2px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 500;
}
.current-card-meta { font-size:12px; color:#999; margin-bottom:8px; }
.current-card-next { font-size:12px; color:#ff3b30; font-weight:600; margin-top:4px; }

.playlist-track-item { 
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.25));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    margin-bottom: 12px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 
        0 4px 20px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(30px) saturate(150%);
    -webkit-backdrop-filter: blur(30px) saturate(150%);
    position: relative;
}

/* 当前播放的歌曲样式 */
.playlist-track-item.current-playing {
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.35));
    border-color: rgba(255, 255, 255, 0.15);
}

.playlist-track-item.current-playing::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, #ff3b30, #fc3c44);
    border-radius: 16px 0 0 16px;
}

.playlist-track-item:hover { 
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.3));
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateX(2px);
    box-shadow: 
        0 6px 28px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.15);
}
.playlist-track-item:active { 
    transform: scale(0.98);
}
.track-cover { 
    width: 100px;
    height: 100px;
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
    position: relative;
    background: linear-gradient(135deg, rgba(80, 80, 80, 0.4), rgba(60, 60, 60, 0.3));
    box-shadow: 
        0 4px 16px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.08);
}
.track-cover img { width:100%; height:100%; object-fit:cover; }
.track-cover-placeholder { position:absolute; inset:0; display:none; align-items:center; justify-content:center; font-size:24px; background:#d0d0d0; }
.track-info { flex:1; min-width:0; display:flex; flex-direction:column; gap:2px; }
.track-title { 
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    margin-bottom: 6px;
    line-height: 1.3;
}
.track-type { 
    font-size: 13px;
    color: rgba(255, 255, 255, 0.6);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 0.3px;
    font-weight: 400;
}
.track-album { 
    font-size: 12px;
    color: rgba(255, 255, 255, 0.7);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* Track进度显示（仅当前播放） */
.track-progress {
    font-size: 10px;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 600;
    letter-spacing: 0.8px;
    white-space: nowrap;
    align-self: flex-end;
    padding-bottom: 4px;
}

/* 菜单按钮（三点） */
.track-menu-btn { 
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    padding: 8px;
    min-height: auto;
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.2s ease;
}
.track-menu-btn:hover { 
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.8);
    transform: scale(1.1);
}
.track-menu-btn:active { 
    transform: scale(0.95);
    background: rgba(255, 255, 255, 0.15);
}

.track-delete-btn { 
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.12), rgba(255, 255, 255, 0.06));
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    padding: 6px;
    min-height: auto;
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.track-delete-btn:hover { 
    background: linear-gradient(135deg, rgba(255, 70, 100, 0.3), rgba(255, 59, 48, 0.2));
    border-color: rgba(255, 100, 100, 0.4);
    color: #ffffff;
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(255, 59, 48, 0.3);
}
.track-delete-btn:active { 
    transform: scale(0.95);
}

@media (max-width: 768px) {
    #tree { padding:12px 16px 140px 16px; font-size:15px; }
    .local-dir-label, .local-file-row { padding:12px; border-radius:12px; gap:12px; }
    .local-dir-name, .local-file-name { font-size:15px; }
    .local-card-grid { grid-template-columns:repeat(auto-fill, minmax(200px, 1fr)); gap:10px; }
    .local-card { padding:12px; border-radius:12px; }
    .local-card-title { font-size:15px; }
    .local-card-meta { font-size:12px; }
    .playlist-current-card { padding:12px; margin:0 0 16px 0; }
    .current-card-cover { width:100px; height:100px; }
    .current-card-title { font-size:16px; }
    .current-card-subtitle { font-size:13px; }
    .playlist-track-item { padding:12px 14px; gap:12px; }
    .track-cover { width:80px; height:80px; }
    .track-title { font-size:15px; margin-bottom:4px; }
    .track-type { font-size:12px; }
    .track-progress { font-size:9px; }
    .track-type { font-size:10px; }
    .track-album { font-size:11px; }
}
ul { list-style:none; margin:0; padding-left:16px; }
.dir > .label { cursor:pointer; user-select:none; display:flex; align-items:center; gap:6px; padding:4px 2px; position:relative; }
.dir.collapsed > ul { display:none; }
.dir > .label .arrow { width:12px; display:inline-block; transition:transform .18s ease; font-size:10px; opacity:.8; }
.dir.collapsed > .label .arrow { transform:rotate(-90deg); }
.file { cursor:pointer; padding:6px 2px 6px 2px; border-radius:4px; }
.file:hover, .dir > .label:hover { 
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.12), rgba(255, 255, 255, 0.06));
    backdrop-filter: blur(10px);
    border-radius: 10px;
}
.playing { 
    color: #ffffff;
    font-weight: 700;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}
