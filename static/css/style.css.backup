/* ===== Search Modal ===== */
.search-modal {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.9);
	z-index: 1000;
	flex-direction: column;
	align-items: flex-start;
}

.search-modal-overlay {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: -1;
}

.search-modal-content {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	background: #1a1a1a;
}

.search-modal-header {
	display: flex;
	align-items: center;
	gap: 12px;
	padding: 16px;
	background: #111;
	border-bottom: 1px solid #333;
}

.search-modal-back {
	flex-shrink: 0;
	width: 40px;
	height: 40px;
	background: transparent;
	border: none;
	color: #fff;
	font-size: 24px;
	cursor: pointer;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 0;
}

.search-modal-input {
	flex: 1;
	background: #333;
	border: none;
	color: #fff;
	padding: 10px 12px;
	border-radius: 6px;
	font-size: 16px;
	outline: none;
}

.search-modal-input::placeholder {
	color: #999;
}

.search-modal-body {
	flex: 1;
	overflow-y: auto;
	padding: 16px;
}

.search-suggestions {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100%;
	gap: 16px;
}

.search-placeholder {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 12px;
	color: #888;
}

.search-placeholder-icon {
	font-size: 48px;
}

.search-placeholder p {
	margin: 0;
	font-size: 14px;
}

.search-loading {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
}

.search-loading-spinner {
	width: 40px;
	height: 40px;
	border: 4px solid #333;
	border-top-color: #667eea;
	border-radius: 50%;
	animation: spin 1s linear infinite;
}

.search-result-item {
	display: flex;
	align-items: center;
	gap: 12px;
	padding: 12px;
	background: #222;
	border-radius: 8px;
	margin-bottom: 8px;
	cursor: pointer;
	transition: background 0.2s;
}

.search-result-cover {
    width: 72px;
    height: 72px;
    border-radius: 8px;
    overflow: hidden;
    background: linear-gradient(135deg, #1f1f1f, #2a2a2a);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.search-result-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.search-result-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    color: #bbb;
}

.search-result-item:hover {
	background: #2a2a2a;
}

.search-result-item:active {
	background: #ebebeb;
	transform: scale(0.99);
}

.search-result-thumbnail {
	width: 80px;
	height: 80px;
	object-fit: cover;
	border-radius: 4px;
	flex-shrink: 0;
}

.search-result-info {
	flex: 1;
	min-width: 0;
}

.search-result-title {
	font-size: 14px;
	font-weight: 500;
	color: #fff;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	margin-bottom: 4px;
}

.search-result-duration {
	font-size: 12px;
	color: #888;
    min-width: 48px;
    text-align: right;
}

.search-result-action {
	flex-shrink: 0;
    width: 40px;
    height: 40px;
	background: #333;
	border: none;
	color: #fff;
	border-radius: 50%;
	cursor: pointer;
	font-size: 20px;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: background 0.2s;
    white-space: nowrap;
    padding: 0;
}

.search-result-action:hover {
	background: #667eea;
}
/* Full Screen Player */
.full-player {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 64px;
	background: linear-gradient(180deg, #1a1a2e 0%, #0f0f0f 100%);
	z-index: 5000;
	display: flex;
	flex-direction: column;
	overflow: hidden;
	animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	padding-bottom: env(safe-area-inset-bottom);
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.full-player-content {
	flex: 1;
	display: flex;
	flex-direction: column;
	padding: 0 24px 24px;
	overflow-y: auto;
	overflow-x: hidden;
}

/* Header */
.full-player-header {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 8px 0;
	min-height: 40px;
	flex-shrink: 0;
}

.full-player-back,
.full-player-menu {
	background: none;
	border: none;
	color: #fff;
	cursor: pointer;
	padding: 4px;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	transition: background 0.2s;
	width: 36px;
	height: 36px;
}

.full-player-back:hover,
.full-player-menu:hover {
	background: rgba(255, 255, 255, 0.1);
}

.full-player-header-info {
	flex: 1;
	text-align: center;
}

.full-player-source {
	font-size: 11px;
	color: #999;
	text-transform: uppercase;
	letter-spacing: 0.5px;
	font-weight: 600;
}

.full-player-source-detail {
	font-size: 13px;
	color: #fff;
	margin-top: 2px;
}

/* Album Art */
.full-player-artwork {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 12px 0;
	max-height: 50vh;
	min-height: 240px;
	flex-shrink: 1;
}

.full-player-artwork-container {
	position: relative;
	width: 100%;
	max-width: 400px;
	aspect-ratio: 1;
	border-radius: 12px;
	overflow: hidden;
	box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
	background: #222;
}

.full-player-artwork-container img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	display: block;
}

.full-player-artwork-placeholder {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 80px;
	color: #555;
	background: linear-gradient(135deg, #2a2a3e 0%, #1a1a2e 100%);
}

/* Song Info */
.full-player-info {
	text-align: center;
	padding: 16px 0 12px;
	flex-shrink: 0;
}

.full-player-title {
	font-size: 22px;
	font-weight: 600;
	color: #fff;
	margin-bottom: 8px;
	line-height: 1.3;
}

.full-player-artist {
	font-size: 16px;
	color: #f85c70;
	font-weight: 500;
}

/* Progress Bar */
.full-player-progress-section {
	padding: 12px 0;
	flex-shrink: 0;
}

.full-player-progress-bar {
	position: relative;
	height: 4px;
	background: rgba(255, 255, 255, 0.2);
	border-radius: 2px;
	cursor: pointer;
	margin-bottom: 8px;
}

.full-player-progress-fill {
	position: absolute;
	top: 0;
	left: 0;
	height: 100%;
	background: #f85c70;
	border-radius: 2px;
	width: 0%;
	transition: width 0.1s linear;
}

.full-player-progress-thumb {
	position: absolute;
	top: 50%;
	left: 0%;
	width: 14px;
	height: 14px;
	background: #fff;
	border-radius: 50%;
	transform: translate(-50%, -50%);
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
	opacity: 0;
	transition: opacity 0.2s;
}

.full-player-progress-bar:hover .full-player-progress-thumb {
	opacity: 1;
}

.full-player-time {
	display: flex;
	justify-content: space-between;
	font-size: 12px;
	color: #999;
}

/* Controls */
.full-player-controls {
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 16px;
	padding: 16px 0;
	flex-shrink: 0;
}

.full-player-control-btn {
	background: none;
	border: none;
	color: #fff;
	cursor: pointer;
	padding: 8px;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	transition: all 0.2s;
	flex-shrink: 0;
}

.full-player-control-btn:hover {
	transform: scale(1.1);
}

.full-player-control-btn:active {
	transform: scale(0.95);
}

.full-player-shuffle,
.full-player-repeat {
	width: 40px;
	height: 40px;
	opacity: 0.6;
}

.full-player-shuffle:hover,
.full-player-repeat:hover {
	opacity: 1;
}

.full-player-shuffle.active,
.full-player-repeat.active {
	opacity: 1;
	color: #f85c70;
}

.full-player-prev,
.full-player-next {
	width: 56px;
	height: 56px;
}

.full-player-play-pause {
	width: 80px;
	height: 80px;
	background: #f85c70;
	box-shadow: 0 4px 16px rgba(248, 92, 112, 0.4);
}

.full-player-play-pause:hover {
	background: #ff6b81;
	box-shadow: 0 6px 20px rgba(248, 92, 112, 0.6);
}

.full-player-play-pause svg {
	filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

/* Volume Control */
.full-player-volume {
	display: flex;
	align-items: center;
	gap: 12px;
	padding: 12px 0;
	max-width: 400px;
	margin: 0 auto;
	flex-shrink: 0;
}

.full-player-volume svg {
	flex-shrink: 0;
	color: #999;
}

.full-player-volume-slider {
	flex: 1;
}

.full-player-volume-slider input[type="range"] {
	width: 100%;
	height: 4px;
	background: rgba(255, 255, 255, 0.2);
	border-radius: 2px;
	outline: none;
	-webkit-appearance: none;
	appearance: none;
}

.full-player-volume-slider input[type="range"]::-webkit-slider-thumb {
	-webkit-appearance: none;
	appearance: none;
	width: 14px;
	height: 14px;
	background: #fff;
	border-radius: 50%;
	cursor: pointer;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.full-player-volume-slider input[type="range"]::-moz-range-thumb {
	width: 14px;
	height: 14px;
	background: #fff;
	border-radius: 50%;
	cursor: pointer;
	border: none;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Action Buttons */
.full-player-actions {
	display: flex;
	justify-content: center;
	gap: 24px;
	padding: 16px 0;
}

.full-player-action-btn {
	background: none;
	border: none;
	color: #999;
	cursor: pointer;
	padding: 12px;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	transition: all 0.2s;
	width: 48px;
	height: 48px;
}

.full-player-action-btn:hover {
	color: #fff;
	background: rgba(255, 255, 255, 0.1);
}

.full-player-action-btn.active {
	color: #f85c70;
}

/* Mobile Responsive */
@media (max-width: 768px) {
	.full-player-content {
		padding: 0 20px 20px;
	}

	.full-player-artwork {
		max-height: 50vh;
		min-height: 260px;
	}

	.full-player-artwork-container {
		max-width: 340px;
	}

	.full-player-title {
		font-size: 20px;
	}

	.full-player-artist {
		font-size: 15px;
	}

	.full-player-play-pause {
		width: 72px;
		height: 72px;
	}

	.full-player-prev,
	.full-player-next {
		width: 50px;
		height: 50px;
	}
}

@media (max-width: 480px) {
	.full-player-artwork {
		min-height: 220px;
	}

	.full-player-artwork-container {
		max-width: 300px;
	}

	.full-player-title {
		font-size: 18px;
	}

	.full-player-artist {
		font-size: 14px;
	}

	.full-player-controls {
		gap: 12px;
	}

	.full-player-play-pause {
		width: 64px;
		height: 64px;
	}

	.full-player-prev,
	.full-player-next {
		width: 44px;
		height: 44px;
	}

	.full-player-shuffle,
	.full-player-repeat {
		width: 36px;
		height: 36px;
	}

	.full-player-actions {
		gap: 16px;
	}

	.full-player-action-btn {
		width: 44px;
		height: 44px;
	}
}

/* Pause Icon SVG */
.full-player-play-pause.paused svg path {
	d: path("M8 5v14l11-7z");
}

.full-player-play-pause.playing svg path {
	d: path("M6 4h4v16H6V4zm8 0h4v16h-4V4z");
}
