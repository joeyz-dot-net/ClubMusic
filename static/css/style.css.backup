	flex-direction: column;
	overflow: hidden;
	box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
	animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
	from { 
		opacity: 0;
		transform: translateY(50px) scale(0.95); 
	}
	to { 
		opacity: 1;
		transform: translateY(0) scale(1); 
	}
}

.playlists-modal-header {
	display: flex;
